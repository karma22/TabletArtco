<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <!--variable increase or set-->
    <RelativeLayout
        android:id="@+id/VariableAddOrSetView"
        android:layout_width="380dp"
        android:layout_height="360dp"
        android:background="@drawable/dialog_variable_add"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="146dp"
            android:layout_height="216dp"
            android:layout_marginTop="71dp"
            android:layout_marginLeft="30dp">
            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_tips"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:text="还没有变量哦"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_value"
            android:layout_width="140dp"
            android:layout_height="32dp"
            android:layout_marginTop="66dp"
            android:layout_marginRight="38dp"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"/>
        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="183dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="114dp"
            android:layout_marginRight="29dp">
            <TextView
                android:id="@+id/tv_key1"
                android:layout_width="48dp"
                android:layout_height="44dp"/>
            <TextView
                android:id="@+id/tv_key2"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv_key3"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tv_key4"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_marginTop="46dp"/>
            <TextView
                android:id="@+id/tv_key5"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_alignBottom="@id/tv_key4"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv_key6"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_alignBottom="@id/tv_key4"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tv_key7"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_marginTop="93dp"/>
            <TextView
                android:id="@+id/tv_key8"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/tv_key7"/>
            <TextView
                android:id="@+id/tv_key9"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_alignBottom="@id/tv_key7"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tv_key10"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/tv_key11"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/tv_key12"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="79dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="21dp"
            android:layout_marginLeft="194dp"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="79dp"
            android:layout_height="33dp"
            android:layout_alignBottom="@id/tv_cancel"
            android:layout_marginLeft="274dp"/>
    </RelativeLayout>
</RelativeLayout>
