<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    
    <!--variable select-->
    <RelativeLayout
        android:id="@+id/VariableSelectView"
        android:layout_width="347dp"
        android:layout_height="339dp"
        android:background="@drawable/dialog_set_value"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/tv_value"
            android:layout_width="270dp"
            android:layout_height="46dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"/>
        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="183dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="90dp">
            <TextView
                android:id="@+id/tv_key1"
                android:layout_width="48dp"
                android:layout_height="44dp"/>
            <TextView
                android:id="@+id/tv_key2"
                android:layout_width="48dp"
                android:layout_height="44dp"
                
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv_key3"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tv_key4"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_marginTop="46dp"/>
            <TextView
                android:id="@+id/tv_key5"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_alignBottom="@id/tv_key4"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv_key6"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_alignBottom="@id/tv_key4"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tv_key7"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_marginTop="93dp"/>
            <TextView
                android:id="@+id/tv_key8"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/tv_key7"/>
            <TextView
                android:id="@+id/tv_key9"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_alignBottom="@id/tv_key7"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tv_key10"
                android:layout_width="48dp"
                android:layout_height="44dp"
                
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/tv_key11"
                android:layout_width="48dp"
                android:layout_height="44dp"
                
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/tv_key12"
                android:layout_width="48dp"
                android:layout_height="44dp"
                
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="106dp"
            android:layout_height="138dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="130dp"
            android:layout_marginRight="38dp">
            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_tips"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:text="还没有变量哦"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="53dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="26dp"
            android:layout_marginLeft="22dp"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="79dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="156dp"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="79dp"
            android:layout_height="33dp"
            android:layout_alignBottom="@id/tv_cancel"
            android:layout_marginLeft="236dp"/>
    </RelativeLayout>
</RelativeLayout>
