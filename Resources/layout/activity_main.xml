<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/Background">
    <!--Top view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="82">
        <RelativeLayout  
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="244"
            android:background="@android:color/transparent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/Logo"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
            
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="890"
            android:gravity="right"
            android:paddingTop="10px"
            android:paddingBottom="8px">
            <ImageView
                android:id="@+id/bt_choice1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_picture"
                />
            <ImageView
                android:id="@+id/bt_choice2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_educationBG"
                />
            <ImageView
                android:id="@+id/bt_choice3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_BG"
                />
            <ImageView
                android:id="@+id/bt_choice4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_sound"
                />
            <ImageView
                android:id="@+id/bt_choice5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_projectsave"
                />
            <ImageView
                android:id="@+id/bt_choice6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_projectcalling"
                />
            <ImageView
                android:id="@+id/bt_choice7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_update"
                />
            <ImageView
                android:id="@+id/bt_choice8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_setting"
                />
        </LinearLayout>
            
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="147"
            android:paddingTop="10px"
            android:paddingBottom="8px"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/bt_choice9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_camera"
                />
        </LinearLayout>
    </LinearLayout>
    <!--Bottom view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="718"
        android:background="@android:color/transparent">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="244"
            android:paddingLeft="6px"
            android:paddingRight="6px"
            android:paddingBottom="4dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/bt_left_select1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/Button_coding1_activation"/>
                <ImageView
                    android:id="@+id/bt_left_select2"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/Button_coding2_deactivation"/>
                <ImageView
                    android:id="@+id/bt_left_select3"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/Button_control_deactivation"/>
                <ImageView
                    android:id="@+id/bt_left_select4"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/Button_effect_deactivation"/>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/Left_bloock_BG">
                <FrameLayout
                    android:id="@+id/left_blocks_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </ScrollView>
        </LinearLayout>
        <!--middle view-->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="890"
            android:orientation="vertical"
            android:background="@android:color/transparent">
            <!--background-->
            <FrameLayout
                android:id="@+id/mainView"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="545"
                android:background="@drawable/Center_frame">
                <!--video area-->
                <FrameLayout
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <!--block animation area-->
                <FrameLayout
                    android:id="@+id/ContainerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <!--block area and button-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="175"
                android:orientation="horizontal"
                android:paddingTop="10px"
                android:layout_marginBottom="4dp">
                <android.support.v4.view.ViewPager
                    android:id="@+id/blockView"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>
                <!--<HorizontalScrollView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    >
                    <GridView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </HorizontalScrollView>-->
                <RelativeLayout
                    android:id="@+id/deleteView"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/bt_delete1"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:src="@drawable/Button_choice_picturedelete"
                        android:scaleType="fitEnd"/>
                    <ImageView
                        android:id="@+id/bt_delete2"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:src="@drawable/Button_choice_picturecalling"
                        android:layout_centerVertical="true"
                        android:scaleType="fitEnd"/>
                    <ImageView
                        android:id="@+id/bt_delete3"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:src="@drawable/Button_choice_blockdelete"
                        android:layout_alignParentBottom="true"
                        android:scaleType="fitEnd"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="146">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/Right_picture_BG"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:padding="4dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
