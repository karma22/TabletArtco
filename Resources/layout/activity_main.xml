                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/bt_delete1"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:src="@drawable/Button_choice_picturedelete"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/bt_delete2"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:src="@drawable/Button_choice_picturecalling"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/bt_delete3"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:src="@drawable/Button_choice_blockdelete"
                        android:layout_alignParentBottom="true"
                        android:scaleType="fitXY"/>
                </RelativeLayout>
            </RelativeLayout>-->

        </RelativeLayout>
		<RelativeLayout
			android:layout_width="0px"
			android:layout_height="match_parent"
			android:layout_weight="146"
			android:layout_marginLeft="0.0dp">
			<ListView
				android:id="@+id/materailListView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/Right_picture_BG"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"
				android:layout_marginBottom="4dp"
				android:divider="@null"
				android:dividerHeight="8dp"
				android:scrollbars="none"
				android:padding="12dp"
				android:layout_above="@id/right_bottom_view"/>
			<LinearLayout
				android:id="@+id/right_bottom_view"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:orientation="horizontal"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"
				android:layout_marginBottom="4dp"
				android:layout_alignParentBottom="true">
				<ImageView
					android:id="@+id/bt_open"
					android:layout_width="0px"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:src="@drawable/Button_choice_picturecalling"
					android:layout_centerVertical="true"
                    />
				<ImageView
					android:id="@+id/bt_delete"
					android:layout_width="0px"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:src="@drawable/Button_choice_picturedelete"
					android:layout_alignParentBottom="true"
                    />
			</LinearLayout>
		</RelativeLayout>
    </LinearLayout>
</LinearLayout>
