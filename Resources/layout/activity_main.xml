<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/Background">
    <!--Top view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="82">
        <RelativeLayout  
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="244"
            android:background="@android:color/transparent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/Logo"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
            
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="890"
            android:gravity="right"
            android:paddingTop="10px"
            android:paddingBottom="8px">
            <ImageView
                android:id="@+id/bt_choice1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_picture"
                />
            <ImageView
                android:id="@+id/bt_choice2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_educationBG"
                />
            <ImageView
                android:id="@+id/bt_choice3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_BG"
                />
            <ImageView
                android:id="@+id/bt_choice4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_sound"
                />
            <ImageView
                android:id="@+id/bt_choice5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_projectsave"
                />
            <ImageView
                android:id="@+id/bt_choice6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_projectcalling"
                />
            <ImageView
                android:id="@+id/bt_choice7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_update"
                />
            <ImageView
                android:id="@+id/bt_choice8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_setting"
                />
        </LinearLayout>
            
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="147"
            android:paddingTop="10px"
            android:paddingBottom="8px"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/bt_choice9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_camera"
                />
        </LinearLayout>
    </LinearLayout>
    <!--Bottom view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="718"
        android:background="@android:color/transparent">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="244"
            android:background="@android:color/transparent">
            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <!--middle view-->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="890"
            android:orientation="vertical"
            android:background="@android:color/transparent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="545"
                android:background="@drawable/Center_frame">
            </FrameLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="175"
                android:orientation="horizontal"
                android:paddingTop="10px"
                android:layout_marginBottom="4dp">
                <HorizontalScrollView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:background="#f00">
                    <GridView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </HorizontalScrollView>
                <RelativeLayout
                    android:id="@+id/deleteView"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/bt_delete"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:src="@drawable/Button_choice_picturedelete"
                        android:scaleType="fitEnd"/>
                    <ImageView
                        android:id="@+id/bt_delete"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:src="@drawable/Button_choice_picturecalling"
                        android:layout_centerVertical="true"
                        android:scaleType="fitEnd"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:src="@drawable/Button_choice_blockdelete"
                        android:layout_alignParentBottom="true"
                        android:scaleType="fitEnd"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="147">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/Right_picture_BG"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:padding="4dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
