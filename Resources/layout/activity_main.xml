<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/Background">
    <!--Top view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="80">
        <RelativeLayout  
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="244"
            android:background="@android:color/transparent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/Logo"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
            
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="890"
            android:gravity="right"
            android:paddingTop="10px"
            android:paddingBottom="8px">
            <ImageView
                android:id="@+id/bt_choice1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_picture"
                />
            <ImageView
                android:id="@+id/bt_choice2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_educationBG"
                />
            <ImageView
                android:id="@+id/bt_choice3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_BG"
                />
            <ImageView
                android:id="@+id/bt_choice4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_sound"
                />
            <ImageView
                android:id="@+id/bt_choice5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_projectsave"
                />
            <ImageView
                android:id="@+id/bt_choice6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_projectcalling"
                />
            <ImageView
                android:id="@+id/bt_choice7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_update"
                />
            <ImageView
                android:id="@+id/bt_choice8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_setting"
                />
        </LinearLayout>
            
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="147"
            android:paddingTop="10px"
            android:paddingBottom="8px"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/bt_choice9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/Button_choice_camera"
                />
        </LinearLayout>
    </LinearLayout>
    <!--Bottom view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="720"
        android:background="@android:color/transparent">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="244"
            android:paddingLeft="12px"
            android:paddingRight="12px"
            android:paddingBottom="4dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/bt_left_select1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/Button_coding1_activation"/>
                <ImageView
                    android:id="@+id/bt_left_select2"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/Button_coding2_deactivation"/>
                <ImageView
                    android:id="@+id/bt_left_select3"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/Button_control_deactivation"/>
                <ImageView
                    android:id="@+id/bt_left_select4"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/Button_effect_deactivation"/>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:layout_marginRight="2px"
                android:background="@drawable/Left_bloock_BG">
                <FrameLayout
                    android:id="@+id/left_blocks_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </ScrollView>
        </LinearLayout>
        <!--middle view-->
        <RelativeLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="890"
            android:background="@android:color/transparent">
            <!--background-->
            <LinearLayout
                android:id="@+id/mainView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                
                android:orientation="vertical"
                android:background="@drawable/Center_frame">
                <FrameLayout
                    android:id="@+id/centerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--video area-->
                    <SurfaceView
                        android:id="@+id/surfaceView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <!--<FrameLayout
                        android:id="@+id/videoView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>-->
                    <!--block animation area-->
                    <FrameLayout
                        android:id="@+id/ContainerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:layout_marginBottom="0.0dp">
					<ImageView
						android:id="@+id/bt_center1"
						android:layout_width="10dp"
						android:layout_height="10dp"
						android:src="@drawable/Button_home"
						android:layout_alignParentLeft="true"/>
					<ImageView
						android:id="@+id/bt_center2"
						android:layout_width="10dp"
						android:layout_height="10dp"
						android:src="@drawable/Button_play"
						android:layout_toLeftOf="@id/bt_empty"/>
					<ImageView
						android:id="@+id/bt_empty"
						android:layout_width="20px"
						android:layout_height="0dp"
						android:layout_centerInParent="true"/>
					<ImageView
						android:id="@+id/bt_center3"
						android:layout_width="10dp"
						android:layout_height="10dp"
						android:src="@drawable/Button_stop"
						android:layout_toRightOf="@id/bt_empty"/>
					<ImageView
						android:id="@+id/bt_center4"
						android:layout_width="10dp"
						android:layout_height="10dp"
						android:src="@drawable/Button_open"
						android:layout_alignParentRight="true"/>
				</RelativeLayout>
            </LinearLayout>
            <!--block area and button-->
			<RelativeLayout
                android:id="@+id/activate_block_wrapperview"
				android:layout_width="match_parent"
				android:layout_height="100dp"
				android:orientation="horizontal"
				android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:background="@drawable/BlockGlass_large">
				<ScrollView
					android:id="@+id/activate_block_view"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
					android:scrollbars="none"
					android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
					android:layout_centerVertical="true">
					<FrameLayout
						android:id="@+id/block_view"
						android:layout_width="match_parent"
						android:layout_height="match_parent"/>
				</ScrollView>
				<RelativeLayout
					android:layout_width="30dp"
					android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
					<ImageView
                        android:id="@+id/bt_scale"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:src="@drawable/zoom_out"
						android:layout_centerHorizontal="true"
						android:layout_alignParentTop="true"/>
                    <ImageView
                        android:id="@+id/bt_add"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:src="@drawable/var_add"
						android:layout_centerInParent="true"
						/>
					<ImageView
                        android:id="@+id/bt_clear_block"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:src="@drawable/Button_choice_blockdelete02"
						android:layout_centerHorizontal="true"
						android:layout_alignParentBottom="true"/>
				</RelativeLayout>
			</RelativeLayout>
            

            <!-- <RelativeLayout
                android:id="@+id/activate_block_view"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:paddingTop="10px"
                android:paddingBottom="4dp"
                android:layout_alignParentBottom="true">
                <tabletartco.DragGridView
                    android:id="@+id/gridview"
