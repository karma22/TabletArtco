
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    
    <!--variable select-->
    <RelativeLayout
        android:id="@+id/VariableSelectView"
        android:layout_width="480dp"
        android:layout_height="340dp"
        android:background="@drawable/dialog_control_xy"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/tv_valueX"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="33dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_valueY"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:layout_marginLeft="298dp"
            android:layout_marginTop="33dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"/>
        <RelativeLayout
            android:layout_width="162dp"
            android:layout_height="183dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="90dp">
            <TextView
                android:id="@+id/tv_key1"
                android:layout_width="48dp"
                android:layout_height="44dp"/>
            <TextView
                android:id="@+id/tv_key2"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv_key3"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tv_key4"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_marginTop="46dp"/>
            <TextView
                android:id="@+id/tv_key5"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_alignBottom="@id/tv_key4"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv_key6"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_alignBottom="@id/tv_key4"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tv_key7"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_marginTop="93dp"/>
            <TextView
                android:id="@+id/tv_key8"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/tv_key7"/>
            <TextView
                android:id="@+id/tv_key9"
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:layout_alignBottom="@id/tv_key7"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tv_key10"
                android:layout_width="48dp"
                android:layout_height="44dp"
                
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/tv_key11"
                android:layout_width="48dp"
                android:layout_height="44dp"
                
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/tv_key12"
                android:layout_width="48dp"
                android:layout_height="44dp"
                
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="106dp"
            android:layout_height="138dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="33dp">
            <ListView
                android:id="@+id/listviewX"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_tips_X"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:text="还没有变量哦"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="106dp"
            android:layout_height="138dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="130dp"
            android:layout_marginRight="33dp">
            <ListView
                android:id="@+id/listviewY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_tips_Y"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:text="还没有变量哦"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="79dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="27dp"
            android:layout_marginLeft="295dp"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="79dp"
            android:layout_height="33dp"
            android:layout_alignBottom="@id/tv_cancel"
            android:layout_marginLeft="373dp"/>
    </RelativeLayout>
</RelativeLayout>